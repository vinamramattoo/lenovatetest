<p id="notice"><%= notice %></p>

<div class="hero-image">
  <div class="hero-text">
    <h1 style="font-size:50px">Free Online Library</h1>
    <p>Lenovate Project</p>
    <button class="btn btn-info">Know more</button>
  </div>
</div>

<div class="container">
  <div class="jumbotron">
<h1 class="center">Books</h1>
<table class="table table-bordered table-striped ">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Edition</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.genre %></td>
        <td><%= book.edition %></td>
        <td style="color:white"><%= link_to '<span class="glyphicon glyphicon-th"></span>'.html_safe, book, class: 'btn btn-primary' %>
                                <%= link_to '<span class="glyphicon glyphicon-edit"></span>'.html_safe,  edit_book_path(book), class: 'btn btn-info' %>
                                <%= link_to '<span class="glyphicon glyphicon-remove"></span>'.html_safe, book, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
 </table>
</div>
</div>
<br>
<div class="center">
<%= link_to '<span class="glyphicon glyphicon-th-large">Add more books !!</span>'.html_safe, new_book_path, class: 'btn btn-success' %>
</div>
<br>
